<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:layout_gravity="center_horizontal"
        android:text="@string/action_choose_color"/>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/linearLayoutColors"
        android:gravity="center_horizontal"
        android:layout_margin="@dimen/activity_vertical_margin"
        android:orientation="horizontal">

        <View
            android:id="@+id/colorViewRed"
            android:layout_width="@dimen/color_chooser_element"
            android:layout_height="@dimen/color_chooser_element"
            android:background="@android:color/holo_red_light"
            android:layout_margin="@dimen/activity_vertical_margin"
            />

        <View
            android:id="@+id/colorViewOrange"
            android:layout_width="@dimen/color_chooser_element"
            android:layout_height="@dimen/color_chooser_element"
            android:background="@android:color/holo_orange_light"
            android:layout_margin="@dimen/activity_vertical_margin"
            />

        <View
            android:id="@+id/colorViewGreen"
            android:layout_width="@dimen/color_chooser_element"
            android:layout_height="@dimen/color_chooser_element"
            android:background="@android:color/holo_green_light"
            android:layout_margin="@dimen/activity_vertical_margin"
            />

        <View
            android:id="@+id/colorViewBlue"
            android:layout_width="@dimen/color_chooser_element"
            android:layout_height="@dimen/color_chooser_element"
            android:background="@android:color/holo_blue_light"
            android:layout_margin="@dimen/activity_vertical_margin"
            />

        <View
            android:id="@+id/colorViewWhite"
            android:layout_width="@dimen/color_chooser_element"
            android:layout_height="@dimen/color_chooser_element"
            android:background="@android:color/white"
            android:layout_margin="@dimen/activity_vertical_margin"
            />

    </LinearLayout>

</LinearLayout>